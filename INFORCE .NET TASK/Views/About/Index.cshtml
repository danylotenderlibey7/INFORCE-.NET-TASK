@model INFORCE_.NET_TASK.Models.About

@{
    ViewData["Title"] = "About URL Shortener";
}

<h1>@Model.Title</h1>

<div class="about-content">
    <p>@Model.Description</p>

    <div class="text-muted small">
        Last updated: @Model.LastUpdated.ToString("f")
        @if (Model.UpdatedBy != null)
        {
            <span>by @Model.UpdatedBy.Username</span>
        }
    </div>
</div>

@if (ViewBag.CanEdit)
{
    <hr />
    <h3>Edit Description (Admin only)</h3>

    <form asp-action="Edit" method="post">
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control" rows="6"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </form>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}