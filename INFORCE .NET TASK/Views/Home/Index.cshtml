@model IEnumerable<INFORCE_.NET_TASK.Models.ViewModels.ShortUrlViewModel>
@{
    ViewData["Title"] = "URL Shortener";
    var canAdd = ViewBag.CanAdd as bool? ?? false;
    var baseUrl = $"{Context.Request.Scheme}://{Context.Request.Host}";
}

<div class="container mt-4">
    <h1 class="mb-4">URL Shortener</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (canAdd)
    {
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-link-45deg"></i> Add New URL</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" class="row g-3">
                    @Html.AntiForgeryToken()
                    <div class="col-md-10">
                        <input type="url" name="originalUrl" class="form-control form-control-lg"
                               placeholder="https://example.com/very-long-url" required />
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-scissors"></i> Shorten
                        </button>
                    </div>
                </form>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info d-flex align-items-center">
            <i class="bi bi-info-circle me-2"></i>
            <div>
                <a asp-controller="Account" asp-action="Login" class="alert-link">Login</a> to add new URLs
            </div>
        </div>
    }
    <div class="card shadow">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-table"></i> Short URLs</h5>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-link-45deg display-1 text-muted"></i>
                    <h4 class="mt-3">No URLs yet</h4>
                    <p class="text-muted">Be the first to add a URL!</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Original URL</th>
                                <th>Short Code</th>
                                <th>Short URL</th>
                                <th>Created By</th>
                                <th>Created Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var url in Model)
                            {
                                <tr>
                                    <td class="text-truncate" style="max-width: 250px;">
                                        <a href="@url.OriginalUrl" target="_blank"
                                           title="@url.OriginalUrl" class="text-decoration-none">
                                            @url.OriginalUrl
                                        </a>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary font-monospace">@url.ShortCode</span>
                                    </td>
                                    <td>
                                        <a href="@baseUrl/r/@url.ShortCode" target="_blank"
                                           class="text-decoration-none">
                                            @baseUrl/r/@url.ShortCode
                                        </a>
                                    </td>
                                    <td>@url.CreatedByUsername</td>
                                    <td>@url.CreatedDate.ToString("g")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-controller="ShortUrls" asp-action="Details" asp-route-id="@url.Id"
                                               class="btn btn-outline-info">
                                                <i class="bi bi-eye"></i> View
                                            </a>

                                            @if (url.CanDelete)
                                            {
                                                <form asp-action="Delete" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@url.Id" />
                                                    <button type="submit" class="btn btn-outline-danger"
                                                            onclick="return confirm('Delete this URL?')">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>